extends layout.pug 

block content 
    h1(class="mb-5")="Listado de productos"
    table(class="table")
        thead
            tr
                th(scope="col")="id"
                th(scope="col")="Title"
                th(scope="col")="Price"
                th(scope="col")="Thumbnail"
        tbody
            each p in productos
                tr
                    th(scope="row")=p.id
                    td=p.title
                    td=p.price
                    td
                        img(
                            alt=p.title 
                            src=p.thumbnail
                            style="width: 60px"
                        )
    